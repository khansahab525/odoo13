<odoo>
    <record id="salla_inherit_partner_form" model="ir.ui.view">
        <field name="name">salla_inherit_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                        name="salla_contacts" string="Salla Contacts"/>

            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group>
                    <group>
                        <field name="salla_contacts_id" default_focus="1" placeholder="Id" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

     <record id="salla_inherit_partner_form" model="ir.ui.view">
        <field name="name">salla_inherit_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                        name="salla_contacts" string="Salla Contacts"/>
                <button type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                        name="salla_product" string="Salla Products"/>

            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <group>
                    <group>
                        <field name="salla_contacts_id" default_focus="1" placeholder="Id" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>