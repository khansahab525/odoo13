<odoo>
    <data>
        <record id="salla_integration_form_id" model="ir.ui.view">
            <field name="name">salla integration</field>
            <field name="model">salla.settings</field>
            <field name="arch" type="xml">
                <form string="Salla Store">
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="col-12 row">

                            <!-- Store -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="store_id"/>
                                </div>
                                <div class="col-10">
                                    <field name="store_id" no-label="1"/>
                                </div>
                            </div>

                            <!-- email -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="email"/>
                                </div>
                                <div class="col-10">
                                    <field name="email" no-label="1"/>
                                </div>
                            </div>

                            <!-- password -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="password"/>
                                </div>
                                <div class="col-10">
                                    <field name="password" no-label="1"/>
                                </div>
                            </div>

                            <!-- client id -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="client_id"/>
                                </div>
                                <div class="col-10">
                                    <field name="client_id" no-label="1"/>
                                </div>
                            </div>

                            <!-- client secret -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="client_secret"/>
                                </div>
                                <div class="col-10">
                                    <field name="client_secret" no-label="1"/>
                                </div>
                            </div>

                            <!-- your url -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="your_url"/>
                                </div>
                                <div class="col-10">
                                    <field name="your_url" no-label="1" placeholder="e.g. http://example.com"/>
                                </div>
                            </div>

                            <!-- redirect url -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="redirect_url"/>
                                </div>
                                <div class="col-10">
                                    <field name="redirect_url" no-label="1" readonly="1"/>
                                </div>
                            </div>

                            <!-- access url -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="login_url"/>
                                </div>
                                <div class="col-10">
                                    <field name="login_url" no-label="1" widget="url"/>
                                </div>
                            </div>
                            <br/>
                            <br/>
                            <!-- Prepare Url button -->
                            <div class="col-12 row">
                                <div class="col-4">
                                    <button name="prepare_url" type="object"
                                            string="Generate Redirect &amp; Access URLS"
                                            class="oe_highlight"/>

                                </div>
                            </div>
                            <br/>
                            <br/>
                            <!-- Code -->
                            <div class="col-12 row">
                                <div class="col-2">
                                    <label for="code"/>
                                </div>
                                <div class="col-10">
                                    <field name="code" no-label="1"/>
                                    <p><b>Access Token ::</b> <field name="access_token"/></p>
                                </div>
                            </div>
                            <div class="col-12 row">
                                <div class="col-2">
                                    <button name="get_access" type="object" string="Get Access"
                                            class="oe_highlight"/>
                                </div>
                            </div>

                            <!-- Get Connect -->
                            <div class="col-12 row">
                                <div class="col-12 text-center">
                                    <button name="get_token" type="object" string="Connect"
                                            class="oe_highlight"/>
                                </div>
                            </div>

                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="salla_integration_view_action_id" model="ir.actions.act_window">
            <field name="name">Salla Integration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salla.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>
                </p>
            </field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="salla_setting_action" name="Salla Configuration" parent="salla_integration.salla_config_root_menu"
                  action="salla_integration_view_action_id" sequence="11"/>
    </data>
</odoo>